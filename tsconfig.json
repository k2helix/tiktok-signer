{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es7", "DOM"],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "removeComments": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "declaration": true,
        "noUnusedLocals": false,
        "outDir": "./build",
        "strict": true
    },
    "include": ["index.ts"],
    "exclude": ["node_modules"]
}
